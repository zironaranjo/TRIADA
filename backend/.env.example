##############################
# TRIADA Backend - .env.example
##############################

## ───── Database (choose one) ─────

# Option 1: Local SQLite (recommended for desarrollo local)
DATABASE_TYPE=sqlite
DATABASE_PATH=./triada.db

# Option 2: PostgreSQL / Supabase
# DATABASE_TYPE=postgres
# DATABASE_URL="postgresql://postgres:[PASSWORD]@db.supabase.co:5432/postgres"

## ───── HTTP Server ─────
PORT=3000

## ───── Email (Resend) ─────
# API key de Resend para enviar emails de confirmación
RESEND_API_KEY=re_your_resend_api_key_here

## ───── Stripe Payments ─────
# Clave secreta de Stripe (modo test o live)
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here

# Clave de webhook para verificar eventos entrantes
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Frontend URL for redirects
FRONTEND_URL=https://triadak.io

## ───── Stripe Subscription Price IDs ─────
# Create Products + Prices in Stripe Dashboard, then paste IDs here
STRIPE_PRICE_BASIC_MONTHLY=price_xxx
STRIPE_PRICE_BASIC_YEARLY=price_xxx
STRIPE_PRICE_PRO_MONTHLY=price_xxx
STRIPE_PRICE_PRO_YEARLY=price_xxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxx
